MBKDIR = $(shell /bin/sh $(MEGISTOS_CONFIG) --virgin-src)
MEGISTOS_CONFIG=@top_builddir@/libmegistos/megistos-config
MSGIDX = VIRGINDIR=$(MBKDIR) @top_builddir@/libmegistos/msgidx

mbk_%.h %.mbk: %.msg
	$(MSGIDX) $<

